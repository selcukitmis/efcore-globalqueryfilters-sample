@{
    ViewData["Title"] = "Home Page";
    var users = (List<User>)ViewBag.Users;
    var allUsers = (List<User>)ViewBag.AllUsers;

    var books = (List<Book>)ViewBag.Books;
    var allBooks = (List<Book>)ViewBag.AllBooks;
}

<h2>With Global Query Filters</h2>
<ul>
    @foreach (var user in users)
    {
        <li>
            @user.Name - @user.UserName
        </li>
    }
</ul>

<h2>Ignored Global Query Filters</h2>
<ul>
    @foreach (var user in allUsers)
    {
        <li>
            @user.Name - @user.UserName
        </li>
    }
</ul>


<h2>With Global Query Filters Books</h2>
<ul>
    @foreach (var book in books)
    {
        <li>
            @book.Name - @book.Name
        </li>
    }
</ul>

<h2>Ignored Global Query Filters</h2>
<ul>
    @foreach (var book in allBooks)
    {
        <li>
            @book.Name - @book.Name
        </li>
    }
</ul>